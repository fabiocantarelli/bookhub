{# templates/book/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <h1 class="mb-2">Assuntos</h1>

    <div class="modal fade" id="newSubjectModal" tabindex="-1" aria-labelledby="newSubjectModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header text-bg-primary">
                    <h1 class="modal-title fs-5" id="newSubjectModalLabel"><i class="bi bi-plus-lg"></i> Novo assunto
                    </h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="{{ path('app_subject_new') }}" method="post">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="new-description" class="col-form-label">Descrição:</label>
                            <input name="description" type="text" maxlength="20" class="form-control"
                                id="new-description" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary"><i class="bi bi-floppy-fill"></i> Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editSubjectModal" tabindex="-1" aria-labelledby="editSubjectModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header text-bg-warning">
                    <h1 class="modal-title fs-5" id="editSubjectModalLabel"><i class="bi bi-pencil-fill"></i> Editar
                        assunto</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="editSubjectForm" method="path">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="edit-description" class="col-form-label">Descrição:</label>
                            <input name="description" type="text" maxlength="20" class="form-control"
                                id="edit-description" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary"><i class="bi bi-floppy-fill"></i> Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-2">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                        data-bs-target="#newSubjectModal">
                        <i class="bi bi-plus-lg"></i> Adicionar
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table id="subjects-table" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">ID</th>
                        <th class="text-center">Descrição</th>
                        <th class="text-center">-</th>
                    </tr>
                </thead>
                <tbody>
                    {% for subject in subjects %}
                    <tr>
                        <td>{{ subject.id }}</td>
                        <td>{{ subject.description }}</td>
                        <td class="text-center">
                            <button type="button" class="btn btn-warning edit-subject-btn me-2" data-bs-toggle="modal"
                                data-bs-target="#editSubjectModal" data-id="{{ subject.id }}"
                                data-description="{{ subject.description }}">
                                <i class="bi bi-pencil-fill"></i> Atualizar
                            </button>
                            <a href="{{ path('app_subject_delete', { id: subject.id }) }}" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Deletar
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    $(document).ready(() => {
        $('#subjects-table').DataTable({
            language: {
                url: "{{ asset('build/datatables/plugins/translate/pt-BR.json') }}"
            },
        });

        $('#editSubjectModal').on('show.bs.modal', function (event) {
            let button = $(event.relatedTarget);
            let subjectId = button.data('id');
            let description = button.data('description');

            // Preencher input
            $('#edit-description').val(description);

            // Ajustar action do form, usando a rota com o id
            let formAction = "{{ path('app_subject_edit', {'id': 'SUBJECT_ID'}) }}";
            formAction = formAction.replace('SUBJECT_ID', subjectId);
            $('#editSubjectForm').attr('action', formAction);
        });
    });
</script>
{% endblock %}