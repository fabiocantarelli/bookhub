{# templates/book/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <h1 class="mb-2">Autores</h1>

    <div class="modal fade" id="newAuthorModal" tabindex="-1" aria-labelledby="newAuthorModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header text-bg-primary">
                    <h1 class="modal-title fs-5" id="newAuthorModalLabel"><i class="bi bi-plus-lg"></i> Novo autor
                    </h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="{{ path('app_author_new') }}" method="post">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="new-name" class="col-form-label">Nome:</label>
                            <input name="name" type="text" maxlength="40" class="form-control"
                                id="new-name" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary"><i class="bi bi-floppy-fill"></i> Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editAuthorModal" tabindex="-1" aria-labelledby="editAuthorModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header text-bg-warning">
                    <h1 class="modal-title fs-5" id="editAuthorModalLabel"><i class="bi bi-pencil-fill"></i> Editar
                        autor</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="editAuthorForm" method="path">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="edit-name" class="col-form-label">Nome:</label>
                            <input name="name" type="text" maxlength="40" class="form-control"
                                id="edit-name" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary"><i class="bi bi-floppy-fill"></i> Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-2">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                        data-bs-target="#newAuthorModal">
                        <i class="bi bi-plus-lg"></i> Adicionar
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table id="authors-table" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">ID</th>
                        <th class="text-center">Nome</th>
                        <th class="text-center">-</th>
                    </tr>
                </thead>
                <tbody>
                    {% for author in authors %}
                    <tr>
                        <td>{{ author.id }}</td>
                        <td>{{ author.name }}</td>
                        <td class="text-center">
                            <button type="button" class="btn btn-warning edit-author-btn me-2" data-bs-toggle="modal"
                                data-bs-target="#editAuthorModal" data-id="{{ author.id }}"
                                data-name="{{ author.name }}">
                                <i class="bi bi-pencil-fill"></i> Atualizar
                            </button>
                            <a href="{{ path('app_author_delete', { id: author.id }) }}" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Deletar
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    $(document).ready(() => {
        $('#authors-table').DataTable({
            language: {
                url: "{{ asset('build/datatables/plugins/translate/pt-BR.json') }}"
            },
        });

        $('#editAuthorModal').on('show.bs.modal', function (event) {
            let button = $(event.relatedTarget);
            let authorId = button.data('id');
            let name = button.data('name');

            // Preencher input
            $('#edit-name').val(name);

            // Ajustar action do form, usando a rota com o id
            let formAction = "{{ path('app_author_edit', {'id': 'SUBJECT_ID'}) }}";
            formAction = formAction.replace('SUBJECT_ID', authorId);
            $('#editAuthorForm').attr('action', formAction);
        });
    });
</script>
{% endblock %}